#!/bin/sh

# This is bound to Shift+PrintScreen by default, requires maim. It lets you
# choose the kind of screenshot to take, including copying the image or even
# highlighting an area to copy. scrotcucks on suicidewatch right now.

# variables
output="$(date '+%y%m%d-%H%M-%S').png"
xclip_cmd="xclip -sel clip -t image/png"

get_selection() {
	maim -u -s \
		--bordersize 4.0 \
		--padding 0.0 \
		--tolerance 20.0 \
		--color=100.0,0.0,0.0,0.3 \
		--nodrag \
		--highlight \
		--nodecorations=2 \
		--quiet
}

case "$(printf "a selected area (copy)\\ncurrent window (copy)\\nfull screen (copy)\\na selected area\\ncurrent window\\nfull screen" | dmenu -i -l -1 -p "Screenshot which area?")" in
    "a selected area (copy)") get_selection | ${xclip_cmd} ;;
    "current window (copy)") maim -q -d 0.2 -i "$(xdotool getactivewindow)" | ${xclip_cmd} ;;
    "full screen (copy)") maim -q -d 0.2 | ${xclip_cmd} ;;
    "a selected area") get_selection -u -s pic-selected-"${output}" ;;
    "current window") maim -q -d 0.2 -i "$(xdotool getactivewindow)" pic-window-"${output}" ;;
    "full screen") maim -q -d 0.2 pic-full-"${output}" ;;
esac
